<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ListRandomizer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="background_color">@color/white</item>
        <item name="editTextBackgroundColor">@color/color_primary_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:toolbarStyle">@style/Theme.ListRandomizer.ToolbarTheme</item>
    </style>

    <style name="Theme.ListRandomizer.ToolbarTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="titleTextColor">@color/black</item>
    </style>

</resources>